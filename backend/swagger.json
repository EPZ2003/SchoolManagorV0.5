{
  "openapi": "3.0.0",
  "info": {
    "title": "Course API",
    "version": "0.5",
    "description": "API to manage courses"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Check if the server is working",
        "responses": {
          "200": {
            "description": "Server is alive",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "alive"
                }
              }
            }
          }
        }
      }
    },
    "/courses": {
      "get": {
        "summary": "Get all courses",
        "responses": {
          "200": {
            "description": "List of all courses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "course": { "type": "string" },
                      "module": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/course": {
      "get": {
        "summary": "Get a course by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID of the course",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Course details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "course": { "type": "string" },
                    "module": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new course",
        "requestBody": {
          "description": "Details of the course to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "course": {
                    "type": "string",
                    "description": "Name of the course",
                    "example": "Mathematics"
                  },
                  "module": {
                    "type": "string",
                    "description": "Module of the course",
                    "example": "Algebra"
                  }
                },
                "required": ["course", "module"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Course created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Course created successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "course": { "type": "string" },
                        "module": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Course and module are required!"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Internal server error"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update an existing course",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID of the course to update",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2
            }
          },
          {
            "name": "column",
            "in": "query",
            "description": "The column name to update",
            "required": true,
            "schema": {
              "type": "string",
              "example": "module"
            }
          },
          {
            "name": "value",
            "in": "query",
            "description": "The new value for the column",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Calculus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Course updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "updated": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a course by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID of the course to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Course deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deleted": { "type": "integer", "example": 1 }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
